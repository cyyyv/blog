---
import { getEntry, render } from "astro:content";
import Markdown from "@components/misc/Markdown.astro";
import I18nKey from "../i18n/i18nKey";
import { i18n } from "../i18n/translation";
import MainGridLayout from "../layouts/MainGridLayout.astro";

const sponsorsPost = await getEntry("spec", "sponsors");

if (!sponsorsPost) {
	throw new Error("Sponsors page content not found");
}

const { Content } = await render(sponsorsPost);

// 赞助者数据
const sponsorItems = [
    {
		name: "Hatsune Miku",
		avatar: "https://i0.hdslb.com/bfs/openplatform/f3d2c4ee4c41adc717b231809daa9f4e2ccf4db4.jpg@1e_1c.webp",
		amount: "￥3.9",
		message: "希望下次来有免费大葱！",
		link: "https://mzh.moegirl.org.cn/初音未来",
	},
];
---
<MainGridLayout title={i18n(I18nKey.sponsors)} description={i18n(I18nKey.sponsors)}>
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full ">
            <Markdown class="mt-2">
                <Content />
            </Markdown>

            <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-8 my-4">
                {sponsorItems.map((item) => (
                    <div class="flex flex-nowrap items-stretch h-28 gap-4 rounded-[var(--radius-large)]">
                        <div class="w-28 h-28 flex-shrink-0 rounded-lg overflow-hidden bg-zinc-200 dark:bg-zinc-900">
                            <img src={item.avatar} alt={item.name} class="w-full h-full object-cover">
                        </div>
                        <div class="grow w-full">
                            <div class="font-bold transition text-lg text-neutral-900 dark:text-neutral-100 mb-1">
                                {item.name} <span class="text-sm font-normal text-[var(--primary)] ml-2">{item.amount}</span>
                            </div>
                            <div class="text-50 text-sm font-medium italic">"{item.message}"</div>
                        </div>
                        {item.link !== "#" && (
                            <a href={item.link} target="_blank" rel="noopener noreferrer" class="flex btn-regular w-[3.25rem] rounded-lg bg-[var(--enter-btn-bg)] hover:bg-[var(--enter-btn-bg-hover)] active:bg-[var(--enter-btn-bg-active)] active:scale-95">
                                <svg xmlns="http://www.w3.org/2000/svg" aria-hidden="true" role="img" class="transition text-[var(--primary)] text-4xl mx-auto iconify iconify--material-symbols" width="1em" height="1em" viewBox="0 0 24 24">
                                    <path fill="currentColor" d="M12.6 12L8.7 8.1q-.275-.275-.275-.7t.275-.7t.7-.275t.7.275l4.6 4.6q.15.15.213.325t.062.375t-.062.375t-.213.325l-4.6 4.6q-.275.275-.7.275t-.7-.275t-.275-.7t.275-.7z"></path>
                                </svg>
                            </a>
                        )}
                    </div>
                ))}
            </div>
        </div>
    </div>
</MainGridLayout>